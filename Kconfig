mainmenu "QDNix configuration"

choice
	prompt "Architecture"
	default CPU_ARM

config CPU_ARM
	bool "ARM architecture"

config CPU_ATHENA
	bool "Athena architecture"

config CPU_RISCV64
	bool "RISC-V 64 architecture"

config CPU_MIPS
	bool "MIPS architecture"

config CPU_Z80
	bool "Z80 architecture"

config CPU_6502
	bool "6502 architecture"

endchoice

source "src/sys/*/Kconfig"

choice
	prompt "Toolchain"
	default SDCC if CPU_Z80
	default GNU if CPU_ATHENA
	default LLVM

config GNU
	bool "GNU"
	depends on CPU_ARM || CPU_ATHENA || CPU_RISCV64 || CPU_MIPS

config LLVM
	bool "LLVM"
	depends on CPU_ARM || CPU_RISCV64 || CPU_MIPS

config CC65
	bool "CC65"
	depends on CPU_6502

config SDCC
	bool "SDCC"
	depends on CPU_Z80

endchoice

source "test/Kconfig"
