
choice
	prompt "Toolchain"
	default SDCC if CPU_Z80
	default GNU if CPU_ATHENA
	default LLVM

config GNU
	bool "GNU"
	depends on CPU_ARM || CPU_ATHENA || CPU_RISCV64 || CPU_MIPS || CPU_PDP11

config LLVM
	bool "LLVM"
	depends on CPU_ARM || CPU_RISCV64 || CPU_MIPS

config CC65
	bool "CC65"
	depends on CPU_6502

config SDCC
	bool "SDCC"
	depends on CPU_Z80

endchoice

config TOOLCHAIN
	string
	default "gnu" if GNU
	default "llvm" if LLVM
	default "cc65" if CC65
	default "sdcc" if SDCC

choice
	prompt "Build Type"
	default DEBUG

config DEBUG
	bool "Debug"

config RELEASE
	bool "Release"

endchoice

menu "Debug Build Configuration"
	depends on DEBUG 

config BUILD_TYPE
	string
	default "debug"

config UBSAN
	bool "build with UBSAN"
	default false
	depends on GNU || LLVM

endmenu

menu "Release Build Configuration"
	depends on RELEASE 

config BUILD_TYPE
	string
	default "release"

endmenu
