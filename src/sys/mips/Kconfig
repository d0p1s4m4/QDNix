menu "MIPS architecture"
	depends on CPU_MIPS

config ARCH
	string
	default "mips"

	choice
		prompt "Board"
		default BOARD_MALTA

		config BOARD_MALTA
			bool "malta"

		config BOARD_MIPSSIM
			bool "mipssim"

	endchoice

	config BOARD
		string
		default "malta" if BOARD_MALTA
		default "mipssim" if BOARD_MIPSSIM

	rsource "malta/Kconfig"
	rsource "mipssim/Kconfig"

endmenu

